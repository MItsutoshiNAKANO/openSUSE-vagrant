        "<esc><enter><wait>",
        "linux ",
        "biosdevname=0 ",
        "net.ifnames=0 ",
        "netdevice=eth0 ",
        "netsetup=dhcp ",
        "lang=en_US ",
        "textmode=1 ",
        "autoyast=http://{{.HTTPIP}}:{{.HTTPPort}}/15.1{{user `autoyast_flavor`}}-general.xml ",
